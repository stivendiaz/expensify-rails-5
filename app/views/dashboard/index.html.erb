<script type="text/javascript" src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

<div class="container">
  <div class="row">
    <div class="total-box col-md-3">
      $<%=@today_amount%>
      <span>HOY</span>
    </div>
    <div class="total-box col-md-3">
      $<%=@yesterday_amount%>
      <span>AYER</span>
    </div>
    <div class="total-box col-md-3">
      $<%= @actual_month_amount %>
      <span>ESTE MES</span>
    </div>
    <div class="total-box col-md-3">
      $<%=@last_month_amount%>
      <span>MES PASADO</span>
    </div>
  </div>

  <div class="row" style="margin-top: 40px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Últimos 6 Meses</div>
        <div class="panel-body">
          <%= content_tag :div, class: "monthly", data: {chart: @options_1} do%>
          <%end%>
          <div id="expenses-chart" style="height: 250px;"></div>
        </div>
      </div>
    </div>
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Día Mes Actual</div>
        <div class="panel-body">
          <%= content_tag :div, class: "daily", data: {chart: @options_2} do %>
          <%end%>
          <div id="daily-expenses-chart" style="height: 250px;"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="row" style="margin-top: 10px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Categoría</div>
        <div class="panel-body">
          <%= content_tag :div, class: "category", data: {chart: @options_3} do %>
          <%end%>
          <div id="category-chart" style="height: 250px;"></div>
        </div>
      </div>
    </div>
    <div class=" box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Acumulado</div>
        <div class="panel-body">
          <%= content_tag :div, class: "accum", data: {chart: @options_4} do %>
          <%end%>
          <div id="month-acc" style="height: 250px;"></div>
        </div>
      </div>
    </div>
  </div>
</div>
